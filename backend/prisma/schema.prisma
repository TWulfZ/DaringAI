generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id             Int              @id @default(autoincrement())
  title          String
  author         User             @relation(fields: [author_id], references: [id])
  author_id      String
  cardsExample   CardExample[]
  cardsChallenge CardChallenge[]
  created_at     DateTime         @default(now())
  updated_at     DateTime         @updatedAt

  @@map("boards")
}

model CardExample {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  language  String
  code      String
  board     Board    @relation(fields: [board_id], references: [id])
  board_id  Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("cards_example")
}

model CardChallenge {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  language  String
  board     Board    @relation(fields: [board_id], references: [id])
  board_id  Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("cards_challenge")
}

model User {
  id        String   @id @default(dbgenerated("auth.uid()")) @db.Uuid
  email     String?  @unique
  boards    Board[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}
