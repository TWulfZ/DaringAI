generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model boards {
  board_id        String            @id @default(uuid()) @db.Uuid
  title           String
  author_id       String            @db.Uuid
  created_at      DateTime          @default(now())
  updated_at      DateTime
  author          users             @relation(fields: [author_id], references: [user_id])
  cards_example   cards_example[]
  cards_challenge cards_challenge[]
}

model cards_example {
  example_id String   @id @default(uuid()) @db.Uuid
  title      String
  content    String
  language   String
  code       String
  board_id   String   @db.Uuid
  created_at DateTime @default(now())
  updated_at DateTime
  board      boards   @relation(fields: [board_id], references: [board_id])
}

model cards_challenge {
  challenge_id String   @id @default(uuid()) @db.Uuid
  title        String
  content      String
  language     String
  board_id     String   @db.Uuid
  created_at   DateTime @default(now())
  updated_at   DateTime
  board        boards   @relation(fields: [board_id], references: [board_id])
}

model users {
  email      String?  @unique
  created_at DateTime @default(now())
  updated_at DateTime
  user_id    String   @id @default(dbgenerated("auth.uid()")) @db.Uuid
  boards     boards[]
}
